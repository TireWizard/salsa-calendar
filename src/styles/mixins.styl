/*
  salsa-calendar | mixins
  ============================== */

clearfix()
  &:after
  &:before
    content ''
    display table
  &:after
    clear both

hide-text()
  text-indent 100%
  white-space nowrap
  overflow hidden

pseudo(display = block)
  content ''
  display display

unstyled-list()
  list-style none
  margin 0
  padding 0
